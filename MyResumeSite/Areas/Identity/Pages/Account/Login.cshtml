@page
@using MyResumeSite.Utilities;
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<link rel="stylesheet" type="text/css" href="/css/LoginOrRegister.css" />

<div style="display: flex; justify-content: center; align-items: center;">
    <form method="post" class="bg-dark border rounded p-3 my-3 text-light"
          style="width: 90%; max-width: 600px;">
        <h1 class="col-12 text-center my-4">Please @ViewData["Title"]</h1>
        <div asp-validation-summary="All" class="text-danger">
        </div>
        <div class="col-12 align-items-center my-4">
            <label asp-for="Input.Email" class="col-sm-12 text-left  "></label>
            <input asp-for="Input.Email" class="col-sm-12 form-control" />
            <span asp-validation-for="Input.Email" class="col-12 text-danger"></span>
        </div>
        <div class="col-12 align-items-center my-4">
            <label asp-for="Input.Password" class="col-sm-12 text-left  "></label>
            <input asp-for="Input.Password" class="col-sm-12 form-control" />
            <span asp-validation-for="Input.Password" class="col-12 text-danger"></span>
        </div>
        <div class="form-group mx-3">
            <div class="g-recaptcha" data-sitekey="@SD.SiteKey"></div>
        </div>
        <div class="col-12">
            <input type="submit" class="btn btn-outline-secondary col-12"
                   value="@ViewData["Title"]" />
        </div>
        <div class="col-12 my-3">
            <p>
                Don't have Acount?
                <a asp-page="/Account/Register" asp-area="Identity" class="text-info">Register</a>
            </p>
        </div>
    </form>
</div>

@section Scripts {
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>
    <partial name="_ValidationScriptsPartial" />
}